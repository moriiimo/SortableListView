<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 親BOX -->
    <style name="list_main_box">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <!-- サムネイル親BOX -->
    <style name="list_thumb_box">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- 中央文字部分親BOX -->
    <style name="list_text_box">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">3dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 右矢印 画像 -->
    <style name="list_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!-- サムネイル -->
    <style name="list_thumb">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- コンテンツ情報 -->
    <style name="contents_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#202020</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">6</item>
    </style>

    <style name="contents_detail">
        <item name="android:textColor">#888888</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
